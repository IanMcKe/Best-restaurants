<html>
	<head>
		<title>Zelp</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
		<link rel="stylesheet" href="/styles.css">
	</head>
	<body>
		<nav class="navbar navbar-default navbar-fixed-top">
			<div class="container-fluid">
				<div class="navbar-header">
					<a class="navbar-brand" href="/"><i class="fa fa-yelp"></i> Zelp</a>
				</div>			
			</div>
		</nav>
		<div class="da-background">
			<div class="jumbotron vertical-center">
				<div class ="container">
					<h2>Update {{ restaurant.getName }}</h2>
					<form action="/restaurants/{{ restaurant.getId }}" method="post">
						<div class="form-group">
							<input name="_method" type="hidden" value="patch">
							<input id="cuisine_id" type="hidden" name="cuisine_id" value="{{ restaurant.getCuisineId }}">
							<label for="name">Restaurant Name:</label>
							<input type="text" name="name" id="name" class="form-control">
							<label for="location">Location:</label>
							<input type="text" name="location" id="location" class="form-control">
							<label for="description">Description:</label>
							<input type="text" name="description" id="description" class="form-control">
							<label for="price">Price (in dollar signs i.e. $$$, $)</label>
							<input type="text" name="price" id="price" class="form-control">
							
							<button type="submit" class="btn btn-default">Update <i class="fa fa-pencil-square-o"></i></button>
						</div>
					</form>
					<form action="/restaurants/{{ restaurant.getId }}" method="post">
						<input name="_method" type="hidden" value="delete">
						<button type="submit" class="btn btn-default">Delete <i class="fa fa-trash-o"></i></button>
					</form>
					
					<form action="/restaurants/{{restaurant.getId}}">
						<button type="submit" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back</button>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>